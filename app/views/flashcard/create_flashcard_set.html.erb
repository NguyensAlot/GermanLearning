<head>
  <title>Create Flashcards</title>
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
  <style>
    #flashcardSetContainer
    {
      width: 600px;
    }
  </style>
  
</head>
<body>
  <div class="text-center">
    <div id="flashcardSetContainer" class="form-group center-block">
      <input type="text" class="form-control" placeholder="Title" autofocus></input>
      
      <hr>
      
      <li>
        <label id="cardNumber">#card_number</label>
        <input type="text" class="form-control col-lg-6" placeholder="front"></input>
        <input type="text" class="form-control" placeholder="back"></input>
      </li>
    </div>
    
    <button class="btn btn-default" click="flashcardHandler.cardAdd();">Add</button>
    <button type="submit" class="btn btn-default">Create!</button>
    
    <h1><%= link_to 'Practice Flashcards', practice_flashcards_path, :class => 'button center' %></h1>
  </div>

  <script>
    var flashcardHandler =
    {
       flashcardSet = [];
       cardIndex = 0;
       cardNumber = document.getElementById("cardNumber");
       fcContainer = document.getElementById("flashcardSetContainer");
       
       cardAdd: function()
       {
         alert("I\'m working");
         cardIndex += 1;
         cardNumber.innerHTML = cardIndex;
         fcContainer.innerHTML = '<li> \
                                    <label>#card_number</label> \
                                    <input type="text" class="form-control col-lg-6" placeholder="front"></input> \
                                    <input type="text" class="form-control" placeholder="back"></input> \
                                  </li>';
       }
    }
  </script>

</body>